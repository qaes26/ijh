    let score = 0;

    function renderQuestions() {
        const container = document.getElementById('quiz-container');
        container.innerHTML = '';

        questions.forEach((item, index) => {
            const card = document.createElement('div');
            card.className = 'question-card';
            
            const questionText = document.createElement('div');
            questionText.className = 'question-text';
            questionText.textContent = `${index + 1}. ${item.q}`;
            
            const optionsList = document.createElement('ul');
            optionsList.className = 'options';

            item.options.forEach((opt, optIndex) => {
                const li = document.createElement('li');
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.textContent = opt;
                btn.onclick = () => checkAnswer(index, optIndex, btn, item.answer);
                li.appendChild(btn);
                optionsList.appendChild(li);
            });

            const feedback = document.createElement('div');
            feedback.className = 'feedback';
            feedback.id = `feedback-${index}`;

            const citation = document.createElement('div');
            citation.className = 'citation';
            citation.textContent = `المصدر: ${item.source}`;

            card.appendChild(questionText);
            card.appendChild(optionsList);
            card.appendChild(feedback);
            card.appendChild(citation);
            container.appendChild(card);
        });
    }

    function checkAnswer(qIndex, selectedIndex, btnElement, correctIndex) {
        const feedbackEl = document.getElementById(`feedback-${qIndex}`);
        const parentUl = btnElement.parentElement.parentElement;
        const allBtns = parentUl.querySelectorAll('.option-btn');

        // Disable all buttons for this question
        allBtns.forEach(btn => btn.disabled = true);

        if (selectedIndex === correctIndex) {
            btnElement.classList.add('correct');
            feedbackEl.style.display = 'block';
            feedbackEl.style.color = '#155724';
            feedbackEl.textContent = 'أحسنت! إجابة صحيحة.';
            score++;
        } else {
            btnElement.classList.add('incorrect');
            // Highlight the correct answer
            allBtns[correctIndex].classList.add('correct');
            feedbackEl.style.display = 'block';
            feedbackEl.style.color = '#721c24';
            feedbackEl.textContent = 'إجابة خاطئة.';
        }

        updateScore();
    }

    function updateScore() {
        document.getElementById('scoreBoard').textContent = `النتيجة: ${score} / ${questions.length}`;
    }

    // Initialize Quiz
    renderQuestions();

</script>

